{
    "name": "BetterKabu",
    "description": "Changes the Digikabu.de website, adds dark theme and time markers for current hour and day.",
    "version": "1.2",
    "manifest_version": 3,
    "permissions": [
        "activeTab"
    ],
    "icons": {
        "16": "/icons/icon16.png",
        "32": "/icons/icon32.png",
        "48": "/icons/icon48.png",
        "128": "/icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/icons/icon16.png",
            "32": "/icons/icon32.png",
            "48": "/icons/icon48.png",
            "128": "/icons/icon128.png"
        }
    },
    "content_scripts": [{
        "matches": ["https://*.digikabu.de/*", "http://*.digikabu.de/*", "https://digikabu.de/*", "http://digikabu.de/*"],
        "js": ["init.js"],
        "css": ["init.css"]
    }]
}

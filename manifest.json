{
    "name": "BetterKabu",
    "description": "BetterKabu ist eine Erweiterung die, der Website Digikabu.de einen Dark Mode gibt, den aktuellen Tag und die Stunde im Stundenplan visuell hervorzuheben und die verbleibende Zeit der aktuellen Unterrichtsstunde anzuzeigen.",
    "version": "1.5",
    "manifest_version": 3,
    "permissions": [
        "activeTab"
    ],
    "icons": {
        "16": "/icons/icon16.png",
        "32": "/icons/icon32.png",
        "48": "/icons/icon48.png",
        "128": "/icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/icons/icon16.png",
            "32": "/icons/icon32.png",
            "48": "/icons/icon48.png",
            "128": "/icons/icon128.png"
        }
    },
    "content_scripts": [{
        "matches": ["https://*.digikabu.de/*", "http://*.digikabu.de/*", "https://digikabu.de/*", "http://digikabu.de/*"],
        "js": ["init.js"],
        "css": ["init.css"]
    }]
}